create database examenfinal;
use examenfinal;

CREATE TABLE CLIENTE(
ID INT NOT NULL PRIMARY KEY AUTO_INCREMENT,
NOMBRES VARCHAR(50),
APELLIDOS VARCHAR(50),
GENERO VARCHAR(10),
FECHA_NAC VARCHAR(10),
ESTADO VARCHAR(50)

);

CREATE TABLE INFO(
	DIRECCION VARCHAR(50),
    CONTACTABLE BOOLEAN,
    INFO_FINANCIERA VARCHAR(50),
    FECHA_CREACION VARCHAR(50),
    FECHA_ACTUALIZACION VARCHAR(50),
    USUARIO_CREADOR VARCHAR(50),
    ESTADO_DE_INFO VARCHAR(50),
    ID_CLIENTE INT,
    FOREIGN KEY (ID_CLIENTE) REFERENCES CLIENTE(ID) 
);


ALTER TABLE CLIENTE
ADD USUARIO_CREADOR VARCHAR(50),
ADD FECHA_CREACION DATETIME DEFAULT CURRENT_TIMESTAMP;
